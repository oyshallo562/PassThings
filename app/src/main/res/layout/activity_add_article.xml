<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="14dp"
        android:layout_height="27dp"
        android:src="@drawable/back"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="60dp"
        android:layout_marginStart="20dp"/>

    <TextView
        android:layout_width="66dp"
        android:layout_height="30dp"
        android:fontFamily="@font/pretendard"
        android:text="글쓰기"
        android:textColor="@color/black"
        android:textSize="25dp"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toTopOf="@id/imageView"
        app:layout_constraintStart_toEndOf="@id/imageView"/>

    <TextView
        android:id="@+id/submitButton"
        android:layout_width="35dp"
        android:layout_height="24dp"
        android:fontFamily="@font/pretendard"
        android:text="완료"
        android:textColor="#FB636B"
        android:textSize="20dp"
        tools:ignore="MissingConstraints"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="20dp"/>

    <ImageButton
        android:id="@+id/imageAddButton"
        android:layout_width="347dp"
        android:layout_height="162dp"
        app:layout_constraintTop_toBottomOf="@id/imageView"
        android:layout_marginTop="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.428"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/cameraxml"
        tools:layout_editor_absoluteY="118dp"/>

    <ImageView
        android:id="@+id/photoImageView"
        android:layout_width="350dp"
        android:layout_height="170dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageAddButton"
        app:layout_constraintEnd_toEndOf="@+id/imageAddButton"
        app:layout_constraintStart_toStartOf="@+id/imageAddButton"
        app:layout_constraintTop_toTopOf="@+id/imageAddButton" />

    <EditText
        android:id="@+id/titleEditText"
        android:layout_width="347dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/pretendard"
        android:hint="제목"
        android:textSize="18dp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageAddButton"
        tools:layout_editor_absoluteY="320dp" />


    <EditText
        android:id="@+id/priceEditText"
        android:layout_width="165dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/pretendard"
        android:hint="가격"
        android:textSize="18dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="35dp"
        app:layout_constraintTop_toBottomOf="@id/titleEditText"
        app:layout_constraintStart_toStartOf="parent"/>

    <EditText
        android:id="@+id/descriptionEditText"
        android:layout_width="347dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/pretendard"
        android:hint="제품상태"
        android:textSize="18dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/priceEditText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <EditText
        android:id="@+id/tagEdittext"
        android:layout_width="347dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/pretendard"
        android:hint="#해쉬태그"
        android:textSize="18dp"
        android:layout_marginBottom="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.434"
        app:layout_constraintStart_toStartOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>